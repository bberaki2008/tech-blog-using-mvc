<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="blog">
    <div class="row justify-content-end blog-title">
        <div class="col-6">
            <h2>
                <a href="/blog/{{blog.id}}">{{blog.title}}</a>
            </h2>
        </div>
        <div class="col-6 mt-2">
            <!-- Pass date_created value to the helper function -->
            <p>posted by {{blog.user.name}} on {{format_date blog.date_created}}</p>
        </div>
    </div>
    <div class="row blog-content"> 
        <div class="col-12">
            <p>
                {{blog.content}}
            </p>
        </div>
    </div>
</div>
{{/each}}