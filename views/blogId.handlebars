
<div class="blog" id="blog">
    <div class="row justify-content-end blog-title">
        <div class="col-6">
            <h2>
                <a href="/blog/{{id}}" data-id="{{blog.id}}">{{title}}</a>
            </h2>
        </div>
        <div class="col-6 mt-2">
            <!-- Pass date_created value to the helper function -->
            <p>Posted by {{user.name}} on {{format_date date_created}}</p>
        </div>
    </div>
    <div class="row blog-content">
        <div class="col-12">
            <p>
                {{content}}
            </p>
        </div>
    </div>
</div>
    
    <div class="col-md-6">
        <h3>Update Blog:</h3>
    
        <form class="form update-blog-form">
            <div class="form-group">
                <label for="blog-name">Blog name:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" data-id="{{blog.id}}" />
            </div>
            <div class="form-group">
                <label for="blog-desc">content:</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>




    <script src="./js/dashboard.js"></script>